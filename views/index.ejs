<% include ./partials/header.ejs %>
<div class="ui main text container">
   <div class="ui huge header">My Blog App</div>
   <div class="ui top attached segment">
      <div class="ui divided items">
         <%myblogs.forEach(function(myblog){ %>
         <div class="item">
            <div class="image">
               <img src="<%= myblog.image%>">
            </div>
            <div class="content">
               <a class="header" href=""/myblogs/<%=myblog._id %>"><%=myblog.title%></a>
               <div class="meta">
                  <span><%=myblog.created.toDateString()%></span>
               </div>
               <div class="description">
                  <p><%- myblog.body.substring(0,100)%>..</p>
               </div>
               <div class="extra">
                  <a class="ui floated basic blue button" href="/myblogs/<%= myblog._id %>">
                  Read More
                  <i class="right chevron icon"></i>
                  </a>
               </div>
            </div>
         </div>
         <% }) %>
      </div>
   </div>
</div>
</div>
<% include ./partials/footer.ejs %>