<% include ./partials/header.ejs %>
<div class="ui main text container segment">
   <div class="ui huge header">Edit: <%= myblog.title%></div>
   <form class="ui form" action="/myblogs/<%= myblog._id %>?_method=PUT" method="POST">
      <div class="field">
         <label>Title</label>
         <input type="text" name="myblog[title]" value ="<%= myblog.title%>">
      </div>
      <div class="field">
         <label>Image</label>
         <input type="text" name="myblog[image]" value="<%= myblog.image%>">
      </div>
      <div class="field">
         <label>Blog content</label>
         <textarea name="myblog[body]" placeholder="enter your blog post"><%= myblog.body%></textarea>
      </div>
      <input class ="ui basic big blue button" type="submit">
   </form>
</div>
<% include ./partials/footer.ejs %>